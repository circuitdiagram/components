<?xml version="1.0" encoding="utf-8"?>
<component version="1.2" xmlns="http://schemas.circuit-diagram.org/circuitDiagramDocument/2012/component/xml">
	<declaration>
		
		<!-- Describe the component -->
		<meta name="name" value="Resistor" />
		<meta name="version" value="1.0" />
		<meta name="minsize" value="50" />
		<meta name="author" value="[your name here]" />
		<meta name="additionalinformation" value="[details here]" />
		<meta name="guid" value="cc164293-0303-46bc-816d-4620591bd0f8" />

		<!-- Define a property to hold the resistance value -->
		<property name="Resistance" type="decimal" default="1" serialize="resistance" display="Resistance">
			<formatting>
				<format conditions="$Resistance[lt]1000" value="X$Resistance " />
			</formatting>
		</property>
		
	</declaration>
	<connections>
		
		<!-- Specify where other components can be connected to -->
		
		<group conditions="horizontal">
			<connection name="a" start="_Start" end="_Middle-21x" edge="start" />
			<connection name="b" start="_Middle+21x" end="_End" edge="end" />
		</group>
		<group conditions="!horizontal">
			<connection name="a" start="_Start" end="_Middle-21y" edge="start" />
			<connection name="b" start="_Middle+21y" end="_End" edge="end" />
		</group>
		
	</connections>
	<render>
		
		<!-- Draw the component -->
		
		<!-- When placed horizontally, draw from left to right -->
		<group conditions="horizontal">
			
			<!-- Draw the lines from the start and end points -->
			<line start="_Start" end="_Middle-12x" />
			<line start="_Middle+12x" end="_End" />

      <line start="_Middle-12x-12y" end="_Middle+12x+12y" />
      <ellipse x="_Middle" y="_Middle" rx="12" ry="12" />

			
			<!-- Draw the resistance value -->
			<text value="$Resistance" x="_Middle" y="_Middle-17" align="CentreCentre" />
			
		</group>
		
		<!-- When placed vertically, draw from top to bottom -->
		<group conditions="!horizontal">

			<!-- Draw the lines from the start and end points -->
			<line start="_Start" end="_Middle-12y" />
			<line start="_Middle+12y" end="_End" />

      <line start="_Middle-12x-12y" end="_Middle+12x+12y" />
      <ellipse x="_Middle" y="_Middle" rx="12" ry="12" />

			<!-- Draw the resistance value -->
			<text value="$Resistance" x="_Middle+17" y="_Middle" align="CentreLeft" />
			
		</group>

	</render>
</component>
