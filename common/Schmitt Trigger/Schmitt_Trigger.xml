<?xml version="1.0" encoding="utf-8"?>
<component version="1.2" xmlns="http://schemas.circuit-diagram.org/circuitDiagramDocument/2012/component/xml">
    <declaration>
        
        <!-- Describe the component -->
        <meta name="name" value="Schmitt Trigger" />
        <meta name="version" value="1.0" />
        <meta name="minsize" value="50" />
        <meta name="author" value="Corsaka" />
        <meta name="additionalinformation" value="A method of removing noise from inputs and outputs." />
        <meta name="guid" value="e104c549-558e-4d32-a078-9c51cf2d84a5" />
        
    </declaration>
    <connections>
        
        <!-- Specify where other components can be connected to -->
        
        <group conditions="horizontal">
            <connection name="a" start="_Start" end="_Middle-21x" edge="start" />
            <connection name="b" start="_Middle+21x" end="_End" edge="end" />
        </group>
        <group conditions="!horizontal">
            <connection name="a" start="_Middle-31y" end="_Middle-21y" edge="start" />
            <connection name="b" start="_Middle+21y" end="_Middle+31y" edge="end" />
        </group>
        
    </connections>
    <render>
        
        <!-- Draw the component -->
        
        <!-- When placed horizontally, draw from left to right -->
        <group conditions="horizontal">
            
            <!-- Draw the lines from the start and end points -->
            <line start="_Start" end="_Middle-20x" />
            <line start="_Middle+20x" end="_End" />

            <!-- Draw the triangle -->
            <line start="_Middle-20y-20x" end="_Middle+20y-20x"/>
            <line start="_Middle-20y-20x" end="_Middle+20x"/>
            <line start="_Middle+20y-20x" end="_Middle+20x"/>
          
            <!-- Draw the schmitt symbol -->
            <line start="_Middle+5y-15x" end="_Middle+5y-5x"/>
            <line start="_Middle-5y-10x" end="_Middle-5y"/>
            <line start="_Middle+5y-5x" end="_Middle-5y-5x"/>
            <line start="_Middle+5y-10x" end="_Middle-5y-10x"/>
            
        </group>
        
        <!-- When placed vertically, draw from top to bottom -->
        <group conditions="!horizontal">

            <!-- Draw the lines from the start and end points -->
			<line start="_Middle-30y" end="_Middle-20y" />
			<line start="_Middle+20y" end="_Middle+30y" />

			<!-- Draw the triangle -->
            <line start="_Middle-20x-20y" end="_Middle+20x-20y"/>
            <line start="_Middle-20x-20y" end="_Middle+20y"/>
            <line start="_Middle+20x-20y" end="_Middle+20y"/>
          
            <!-- Draw the schmitt symbol -->
            <line start="_Middle+5x-15y" end="_Middle+5x-5y"/>
            <line start="_Middle-5x-10y" end="_Middle-5x"/>
            <line start="_Middle+5x-5y" end="_Middle-5x-5y"/>
            <line start="_Middle+5x-10y" end="_Middle-5x-10y"/>
            
        </group>

    </render>
</component>
