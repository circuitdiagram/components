<?xml version="1.0" encoding="utf-8"?>
<component version="1.2" xmlns="http://schemas.circuit-diagram.org/circuitDiagramDocument/2012/component/xml">
	<declaration>

		<!-- Describe the component -->
		<meta name="name" value="74hc595" />
		<meta name="version" value="1.0" />
		<meta name="minsize" value="120" />
		<meta name="author" value="Simonetta Ifeji" />
		<meta name="additionalinformation" value="A 74hc595 shift register" />
		<meta name="guid" value="05c1e9a5-3548-49b8-984e-eafab9d8f544" />

		<!-- Can only be displayed horizontally -->
		<flags>
			<option>horizontalonly</option>
		</flags>
		
	</declaration>
	<connections>

		<!-- Allow other components to connect to each of the pins -->
		<group>
			<connection start="_Start-80y" end="_Middle-48x-80y" edge="Start" />
			<connection start="_Start-60y" end="_Middle-48x-60y" edge="Start" />
			<connection start="_Middle+48x-80y" end="_End-80y" edge="End" />
			<connection start="_Middle+48x-60y" end="_End-60y" edge="End" />
			<connection start="_Start-40y" end="_Middle-48x-40y" edge="Start" />
			<connection start="_Middle+48x-40y" end="_End-40y" edge="End" />
			<connection start="_Start-20y" end="_Middle-48x-20y" edge="Start" />
			<connection start="_Middle+48x-20y" end="_End-20y" edge="End" />
			<connection start="_Start" end="_Middle-48x" edge="Start" />
			<connection start="_Middle+48x" end="_End" edge="End" />
			<connection start="_Start+20y" end="_Middle-48x+20y" edge="Start" />
			<connection start="_Middle+48x+20y" end="_End+20y" edge="End" />
		  <connection start="_Middle+48x+40y" end="_End+40y" edge="End" />
		  <connection start="_Start+40y" end="_Middle-48x+40y" edge="Start" />
		  <connection start="_Middle+48x+60y" end="_End+60y" edge="End" />
		  <connection start="_Start+60y" end="_Middle-48x+60y" edge="Start" />
		</group>
		
	</connections>
	<render>
		
		<group>
			<!-- Draw the rectangle representing the chip -->
			<rect x="_Middle-50" y="_Middle-90" width="100" height="160" />

			<!-- Draw a line to each pin -->
			<line start="_Start-80y" end="_Middle-50x-80y" />
			<line start="_Start-60y" end="_Middle-50x-60y" />
			<line start="_Middle+50x-80y" end="_End-80y" />
			<line start="_Middle+50x-60y" end="_End-60y" />
			<line start="_Start-40y" end="_Middle-50x-40y" />
			<line start="_Middle+50x-40y" end="_End-40y" />
			<line start="_Start-20y" end="_Middle-50x-20y" />
			<line start="_Middle+50x-20y" end="_End-20y" />
			<line start="_Start" end="_Middle-50x" />
			<line start="_Middle+50x" end="_End" />
			<line start="_Start+20y" end="_Middle-50x+20y" />
			<line start="_Middle+50x+20y" end="_End+20y" />
      <line start="_Start+40y" end="_Middle-50x+40y" />
			<line start="_Middle+50x+40y" end="_End+40y" />
      <line start="_Start+60y" end="_Middle-50x+60y" />
			<line start="_Middle+50x+60y" end="_End+60y" />
          
          

			<!-- Draw a label at each pin -->
			<!-- TODO: change "pin0"..."pin16" to the values for your chip -->
			<text x="_Middle-46" y="_Middle-80" align="CentreLeft" size="large" value="Q7'" />
			<text x="_Middle-46" y="_Middle-60" align="CentreLeft" size="large" value="MR" />
			<text x="_Middle+46" y="_Middle-80" align="CentreRight" size="large" value="GND" />
			<text x="_Middle+46" y="_Middle-60" align="CentreRight" size="large" value="Q7" />
			<text x="_Middle-46" y="_Middle-40" align="CentreLeft" size="large" value="SH_CP" />
			<text x="_Middle+46" y="_Middle-40" align="CentreRight" size="large" value="Q6" />
			<text x="_Middle-46" y="_Middle-20" align="CentreLeft" size="large" value="ST_CP" />
			<text x="_Middle+46" y="_Middle-20" align="CentreRight" size="large" value="Q5" />
			<text x="_Middle-46" y="_Middle" align="CentreLeft" size="large" value="OE" />
			<text x="_Middle+46" y="_Middle" align="CentreRight" size="large" value="Q4" />
			<text x="_Middle-46" y="_Middle+20" align="CentreLeft" size="large" value="DS" />
			<text x="_Middle+46" y="_Middle+20" align="CentreRight" size="large" value="Q3" />
      <text x="_Middle-46" y="_Middle+40" align="CentreLeft" size="large" value="Q0" />
			<text x="_Middle+46" y="_Middle+40" align="CentreRight" size="large" value="Q2" />
      <text x="_Middle-46" y="_Middle+60" align="CentreLeft" size="large" value="VCC" />
			<text x="_Middle+46" y="_Middle+60" align="CentreRight" size="large" value="Q1" />        
		</group>
		
	</render>
</component>
